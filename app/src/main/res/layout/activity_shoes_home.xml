<?xml version="1.0" encoding="utf-8"?>
<!-- 신발 메인 화면 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".shoes_home">

    <RelativeLayout
        android:id="@+id/reative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:background="#FFFFFF"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/menu_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#00FFFFFF"
            android:src="@drawable/ic_bell_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/menu_btn"
            android:layout_centerInParent="true"

            android:fontFamily="@font/nanumsquareroundb"
            android:letterSpacing="0.1"
            android:text="모두의 런닝"
            android:textColor="#161616"
            android:textSize="22sp" />

        <ImageButton
            android:id="@+id/search_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/shopping_btn"
            android:backgroundTint="#00FFFFFF"
            android:src="@drawable/ic_search_icon" />

        <ImageButton
            android:id="@+id/shopping_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:backgroundTint="#00FFFFFF"
            android:src="@drawable/ic_shoppingbag_icon" />

    </RelativeLayout>

    <FrameLayout
        android:id="@+id/main_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="1dp">

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottomNavi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:itemIconTint="#FFFFFF"
            app:itemTextColor="#FFFFFF"
            app:menu="@menu/bottom_menu"
            android:layout_gravity="bottom"
            tools:layout_editor_absoluteX="12dp">
        </com.google.android.material.bottomnavigation.BottomNavigationView>

    </FrameLayout>





</LinearLayout>