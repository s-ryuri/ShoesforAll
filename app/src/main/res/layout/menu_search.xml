<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent">`

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">

        <androidx.appcompat.widget.SearchView
            android:layout_width="wrap_content"
            app:iconifiedByDefault="false"
            app:queryHint="검색창"
            android:layout_height="wrap_content"/>
    </androidx.appcompat.widget.Toolbar>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:padding="8dp"
        android:columnCount="2"
        android:rowCount="8">
        <ImageView
            android:layout_row="1"
            android:id="@+id/adidasBtn"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:layout_columnWeight="1"
            android:src="@drawable/ic_adidas"
            android:onClick="onClick"
            />

        <ImageView
            android:layout_row="1"
            android:id="@+id/descenteBtn"
            android:layout_rowWeight="1"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:src="@drawable/ic_descente1"
             />

        <ImageView
            android:layout_row="2"
            android:id="@+id/miznoBtn"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:layout_columnWeight="1"
            android:src="@drawable/ic_mizno"
             />

        <ImageView
            android:layout_row="2"
            android:layout_rowWeight="1"
            android:id="@+id/asicsBtn"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:src="@drawable/ic_asics"
            android:text="asics" />

        <ImageView
            android:layout_row="3"
            android:layout_rowWeight="1"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:id="@+id/brooksBtn"
            android:src="@drawable/ic_brooks"
            />

        <ImageView
            android:layout_row="3"
            android:layout_rowWeight="1"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:id="@+id/sauconyBtn"
            android:src="@drawable/ic_saucony"
             />


        <TextView
            android:layout_row="4"
            android:layout_rowWeight="1"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:gravity="center"
            android:fontFamily="@font/nanumsquareroundeb"
            android:textSize="20sp"
            android:textColor="#000000"
            android:id="@+id/cushion_shoes"
            android:onClick="onClick"
            android:text="쿠션화" />
        <TextView
            android:layout_row="4"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_height="100dp"
            android:layout_columnWeight="1"
            android:gravity="center"
            android:id="@+id/stablize_shoes"
            android:fontFamily="@font/nanumsquareroundeb"
            android:textSize="20sp"
            android:textColor="#000000"
            android:onClick="onClick"
            android:text="안정화" />
        <TextView
            android:layout_row="5"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_height="100dp"
            android:layout_columnWeight="1"
            android:gravity="center"
            android:fontFamily="@font/nanumsquareroundeb"
            android:textSize="20sp"
            android:textColor="#000000"
            android:id="@+id/control_shoes"
            android:onClick="onClick"
            android:text="제어화" />
    </GridLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="#000000"
        android:layout_height="0dp"
        android:gravity="center_horizontal|center_vertical"
        android:layout_weight="1">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="공지사항"
            android:textColor="#FFFFFF"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_height="wrap_content"

            android:text="멤버 소개"
            android:textColor="#FFFFFF"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:text="고객센터"
            android:textColor="#FFFFFF"/>
    </LinearLayout>

</LinearLayout>